{
    "compilerOptions": {
        "module": "es2015",
        "target": "es2015",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "outDir": ".tmp/esm",
        "rootDir": ".",
        "sourceMap": true,
        "removeComments": false,
        "moduleResolution": "node",
        "declaration": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "types": [
            "jasmine"
        ]
    },
    "angularCompilerOptions": {
        "genDir": ".",
        "debug": true
    },
    "include": [
        "src/**/*"
    ]
}
